<config>
    <modules>
        <Training_Complexworld>
            <version>0.1.0</version>
        </Training_Complexworld>
    </modules>
    <frontend>
        <routers>
            <complexworld>
                <use>standard</use>
                <args>
                    <module>Training_Complexworld</module>
                    <frontName>complexworld</frontName>
                </args>
            </complexworld>
        </routers>
        <layout>
            <updates>
                <complexworld>
                    <file>complexworld/local.xml</file>
                </complexworld>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <complexworld>
                <class>Training_Complexworld_Block</class>
            </complexworld>
        </blocks>
        <models>
            <complexworld>
                <class>Training_Complexworld_Model</class>
                <resourceModel>complexworld_resource</resourceModel>
            </complexworld>
            <complexworld_resource>
                <class>Training_Complexworld_Model_Resource</class>
                <entities>
                    <eavblogpost>
                        <table>eavblog_posts</table>
                    </eavblogpost>
                </entities>
            </complexworld_resource>
        </models>
        <resources>
            <complexworld_setup>
                <setup>
                    <module>Training_Complexworld</module>
                    <class>Training_Complexworld_Model_Resource_Setup</class>
                </setup>
            </complexworld_setup>
        </resources>
        <events>
            <complexworld_eavblogpost_load_after>
                <observers>
                    <Training_Complexworld_Model_Observer>
                        <type>singleton</type>
                        <class>complexworld/observer</class>
                        <method>changeContentAfterLoad</method>
                    </Training_Complexworld_Model_Observer>
                </observers>
            </complexworld_eavblogpost_load_after>
            <complexworld_eavblogpost_save_before>
                <observers>
                    <Training_Complexworld_Model_ObserverSaveBefore>
                        <type>singleton</type>
                        <class>complexworld/observerSaveBefore</class>
                        <method>changeTitleSaveBefore</method>
                    </Training_Complexworld_Model_ObserverSaveBefore>
                </observers>
            </complexworld_eavblogpost_save_before>
        </events>
    </global>
</config>
