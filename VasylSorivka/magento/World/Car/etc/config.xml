<?xml version="1.0"?>
<config>
    <modules>
        <World_Car>
            <version>1.0.0</version>
        </World_Car>
    </modules>
    <global>
        <blocks>
            <world>
                <class>World_Car_Block</class>
            </world>
        </blocks>
    </global>
    <frontend>
        <routers>
            <world>
                <use>standard</use>
                <args>
                    <module>World_Car</module>
                    <frontName>world</frontName>
                </args>
            </world>
        </routers>
        <layout>
            <updates>
                <world module="world">
                    <file>world.xml</file>
                </world>
            </updates>
        </layout>
    </frontend>
</config>
