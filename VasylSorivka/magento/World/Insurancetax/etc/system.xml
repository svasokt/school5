<config>
    <tabs>
        <insuranceconfig translate="label" module="insurancetax">
            <label>Insurance tax</label>
            <sort_order>1</sort_order>
        </insuranceconfig>
    </tabs>
    <sections>
        <insurancetax translate="label" module="insurancetax">
            <label>Insurance Tax Configuration</label>
            <tab>insuranceconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <insurancetax_group translate="label">
                    <label>Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <insurancetax_enabled translate="label">
                            <label>Enabled:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </insurancetax_enabled>
                        <insurancetax_insurance_tax_amount>
                            <label>Insurance Tax Amount:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </insurancetax_insurance_tax_amount>
                        <insurancetax_price>
                            <label>Apply Insurance Tax</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </insurancetax_price>
                    </fields>
                </insurancetax_group>
            </groups>
        </insurancetax>
    </sections>
</config>
