<layout version="0.1.0">
    <sales_order_view>
        <reference name="order_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_order_view>
    <sales_order_invoice>
        <reference name="invoice_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_order_invoice>
    <sales_order_creditmemo>
        <reference name="creditmemo_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_order_creditmemo>
    <sales_order_print>
        <reference name="order_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_order_print>
    <sales_order_printinvoice>
        <reference name="invoice_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_order_printinvoice>
    <sales_order_printcreditmemo>
        <reference name="creditmemo_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_order_printcreditmemo>
    <sales_email_order_items>
        <reference name="order_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_email_order_items>
    <sales_email_order_invoice_items>
        <reference name="order_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_email_order_invoice_items>
    <sales_email_order_creditmemo_items>
        <reference name="creditmemo_totals">
            <block type="training_discounter/order_total" name="training.discounter.order" />
        </reference>
    </sales_email_order_creditmemo_items>
    <sales_guest_view>
        <update handle="sales_order_view"/>
    </sales_guest_view>
    <sales_guest_invoice>
        <update handle="sales_order_invoice"/>
    </sales_guest_invoice>
    <sales_guest_creditmemo>
        <update handle="sales_order_creditmemo"/>
    </sales_guest_creditmemo>
    <sales_guest_print>
        <update handle="sales_order_print"/>
    </sales_guest_print>
    <sales_guest_printinvoice>
        <update handle="sales_order_printinvoice"/>
    </sales_guest_printinvoice>
    <sales_guest_printcreditmemo>
        <update handle="sales_order_printcreditmemo"/>
    </sales_guest_printcreditmemo>
</layout>
